{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    // Add paths to resolve modules better
    "paths": {
      "generated/*": ["generated/*"]
    }
  },
  "include": [
    "src/**/*",  // Include all files inside 'src'
    "generated/**/*"  // Include files inside 'generated' for type checking
  ],
  "exclude": [
    "node_modules",  // Exclude 'node_modules' from compilation
    "dist"  // Exclude 'dist' since it's for build output
  ]
}
